                    <li class="nav-item">
                        <a class="nav-link active" id="pills-home-tab-nobd" data-toggle="pill" href="#all" role="tab" aria-controls="pills-home-nobd" aria-selected="true">All</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="pills-profile-tab-nobd" data-toggle="pill" href="#rejected" role="tab" aria-controls="pills-profile-nobd" aria-selected="false">Rejected</a>
