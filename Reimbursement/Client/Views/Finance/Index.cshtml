                        <div class="table-responsive">
                            <table id="reimDataApprove" class="display table table-striped table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>NIK</th>
                                        <th>Fullname</th>
                                        <th>Category</th>
                                        <th>Description</th>
                                        <th>Amount</th>
