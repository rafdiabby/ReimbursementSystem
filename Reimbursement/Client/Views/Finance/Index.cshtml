                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="submitted" role="tabpanel" aria-labelledby="pills-contact-tab-nobd">
                        <div class="table-responsive">
                            <table id="reimDataSubmitted" class="display table table-striped table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th>ID</th>
                                        <th>NIK</th>
                                        <th>Fullname</th>
                                        <th>Category</th>
                                        <th>Description</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Status Details</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="refunded" role="tabpanel" aria-labelledby="pills-contact-tab-nobd">
